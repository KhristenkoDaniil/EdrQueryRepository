<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary_light"
    android:layout_margin="2dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/Black"
        android:text="gffhgfhhfgfghfghg"
        android:layout_marginTop="4dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/Black"
        android:text="dsjkghkakjgklakg"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/posada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="@color/Black"
        android:text="Должность:"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/work_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="@color/Black"
        android:text="dsjkghkakjgklakg"
        android:layout_marginLeft="4dp"/>

    <TextView
        android:id="@+id/position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="@color/Black"
        android:text="dsjkghkakjgklakg"
        android:layout_marginLeft="4dp"/>


    <EditText
        android:id="@+id/comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="@color/Black"
        android:text="dsjkghkakjgklakg"
        android:layout_marginLeft="4dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <CheckBox
            android:id="@+id/checkbox_gold_star"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:button="@drawable/checkstar_selector"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>

        <ImageView
            android:id="@+id/book_view_declaration"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/books_icon"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>

        <ImageView
            android:id="@+id/save_comment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/pen_icon"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>

    </LinearLayout>




</LinearLayout>