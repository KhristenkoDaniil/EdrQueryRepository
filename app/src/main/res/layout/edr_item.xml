<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/materialDesignBlue400"
    android:layout_margin="2dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="@color/Black"
        android:text="gffhgfhhfgfghfghg" />

    <TextView
        android:id="@+id/first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="@color/Black"
        android:text="dsjkghkakjgklakg" />

    <TextView
        android:id="@+id/work_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="@color/Black"
        android:text="dsjkghkakjgklakg" />

    <CheckBox
        android:id="@+id/checkbox_gold_star"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:button="@drawable/checkstar_selector"/>

    <ImageView
        android:id="@+id/book_view_declaration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/books_icon" />


</LinearLayout>